{
  "compilerOptions": {
    "target": "ESNext",
    "types": [
      "element-plus/global",
      "vite/client",
      "vite-plugin-pages/client",
      "@types/node"
    ],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/*"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
